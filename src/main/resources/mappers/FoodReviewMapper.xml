<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.pubbyserver.dao.FoodReviewDao">

    <resultMap id="FoodReviewMap" type="com.example.pubbyserver.entity.FoodReview">
        <id property="id" column="id"/>
        <result property="restaurantName" column="restaurant_name"/>
        <result property="restaurantLocation" column="restaurant_location"/>
        <result property="rating" column="rating"/>
        <result property="foodImage" column="food_image"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, restaurant_name, restaurant_location, rating, food_image, remark, create_time, update_time, create_by, update_by
    </sql>

    <select id="selectById" parameterType="long" resultMap="FoodReviewMap">
        SELECT <include refid="Base_Column_List"/>
        FROM food_review
        WHERE id = #{id}
    </select>

    <select id="selectListByRating" parameterType="int" resultMap="FoodReviewMap">
        SELECT <include refid="Base_Column_List"/>
        FROM food_review
        WHERE rating = #{rating}
    </select>

    <select id="selectAll" resultMap="FoodReviewMap">
        SELECT <include refid="Base_Column_List"/>
        FROM food_review
    </select>

    <insert id="insert" parameterType="com.example.pubbyserver.entity.FoodReview" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO food_review (restaurant_name, restaurant_location, rating, food_image, remark, create_time, update_time, create_by, update_by)
        VALUES (#{restaurantName}, #{restaurantLocation}, #{rating}, #{foodImage}, #{remark}, #{createTime}, #{updateTime}, #{createBy}, #{updateBy})
    </insert>

    <update id="update" parameterType="com.example.pubbyserver.entity.FoodReview">
        UPDATE food_review
        <set>
            <if test="restaurantName != null and restaurantName != ''">
                restaurant_name = #{restaurantName},
            </if>
            <if test="restaurantLocation != null and restaurantLocation != ''">
                restaurant_location = #{restaurantLocation},
            </if>
            <if test="rating != null">
                rating = #{rating},
            </if>
            <if test="foodImage != null and foodImage != ''">
                food_image = #{foodImage},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            update_time = #{updateTime},
            update_by = #{updateBy}
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM food_review WHERE id = #{id}
    </delete>

</mapper>